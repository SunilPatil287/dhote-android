<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="AccountFragmentBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="@dimen/dp_08"
        tools:context=".ui.view.fragment.AccountFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_05"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/ic_demo_profile"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/CustomTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_profile"
                        android:paddingStart="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_05"
                    app:cardCornerRadius="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_05">

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_profile"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableStart="@drawable/ic_user_profile"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/menu_profile"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_orders"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_05"
                            android:drawableStart="@drawable/ic_orders"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_orders"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_address"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_05"
                            android:drawableStart="@drawable/ic_address_kart"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/address"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_05"
                    app:cardCornerRadius="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_05">

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_terms"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableStart="@drawable/ic_terms"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_terms"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_faq"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_05"
                            android:drawableStart="@drawable/ic_faq"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_faq"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_privacy_policy"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_05"
                            android:drawableStart="@drawable/ic_privacy"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/privacy"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_05"
                    app:cardCornerRadius="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_05">

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_contact_us"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableStart="@drawable/ic_contact"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_contact_us"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="@dimen/dp_06"
                            android:id="@+id/tv_logout"
                            style="@style/CustomTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_05"
                            android:drawableStart="@drawable/ic_logout"
                            android:drawableEnd="@drawable/ic_right_arrow"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_logout"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>
