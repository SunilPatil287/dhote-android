<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SubCategoryAdapterBinding">

        <variable
            name="data"
            type="com.iitms.bfr.data.model.CategoryList" />

    </data>

    <LinearLayout
        android:id="@+id/cv_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dp_05"
            android:id="@+id/cv_sub_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_15">


            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_sub_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:src="@drawable/ic_chicken_logo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_sub_category_name"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_05"
            android:gravity="center"
            android:text="Boiler Chicken"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

    </LinearLayout>

</layout>