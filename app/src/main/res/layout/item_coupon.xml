<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="CouponAdapterBinding">

        <variable
            name="data"
            type="com.iitms.bfr.data.model.CategoryList" />

    </data>

    <LinearLayout
        android:id="@+id/cv_main"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_310"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dp_05"
            android:id="@+id/cv_sub_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_15">
            <RelativeLayout
                android:padding="@dimen/dp_08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_offer"
                    android:src="@drawable/ic_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title"
                        android:textSize="@dimen/sp_15"
                        style="@style/CustomTextView"
                        android:textStyle="bold"
                        android:text="20 % off upto Rs 50"
                        android:layout_toRightOf="@+id/iv_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/textColorLight"
                        android:textSize="@dimen/sp_13"
                        style="@style/CustomTextView"
                        android:textStyle="bold"
                        android:text="USE RUPAY 100 | ABOVE 150"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</layout>